{
  "name": "pokedex",
  "version": "1.0.0",
  "description": "Projeto Pokedex",
  "main": "index.js",
  "watch": {
    "compile:sass": {
      "patterns": [
        "sass/main.scss"
      ],
      "extensions": "scss"
    },
    "compileErro:sass": {
      "patterns": [
        "sass/erro.scss"
      ],
      "extensions": "scss"
    },
    "compileModal:sass": {
      "patterns": [
        "sass/modal.scss"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "compile:sass": "sass sass/main.scss css/style.css",
    "compileErro:sass": "sass ./sass/erro.scss ./css/erro.css",
    "compileModal:sass": "sass ./sass/modal.scss ./css/modal.css",
    "watch": "npm-watch"
  },
  "author": "Samuel Johnny da silva pires",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "sass": "^1.77.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0"
  }
}
